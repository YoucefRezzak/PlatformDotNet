        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Views"
        mc:Ignorable="d"
        Title="Login" Height="182" Width="326">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="389*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="UsernameText" HorizontalAlignment="Left" Height="23" Margin="134,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" Grid.Column="1"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="19,22,0,0" VerticalAlignment="Top" Width="84" Grid.Column="1"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="19,68,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <PasswordBox x:Name="PswdText" Grid.Column="1" HorizontalAlignment="Left" Margin="134,68,0,0" VerticalAlignment="Top" Width="169" Height="26" KeyDown="Entrer"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="219,119,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.613,-0.5" Grid.Column="1" Click="Button_Click"/>

    </Grid>
</Window>
